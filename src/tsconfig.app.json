{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    //"noEmit": true,
    //"outFile": "../out-tsc/app",
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      // APP
      "app/*": ["app/*"],
      "components/*": ["app/components/*"],
      "services/*": ["app/services/*"],
      // ASSETS
      "assets/*": ["assets/*"],
      // SHARED
      "shared/*": ["shared/*"],
      "abstract/*": ["shared/abstractClasses/*"],
      "interfaces/*": ["shared/interfaces/*"]
    },
    "module": "es2015",
    "types": []
  },
  "exclude": [
    "../node_modules/**",
    "public",
    "test.ts",
    "**/*.spec.ts"
  ]
}
